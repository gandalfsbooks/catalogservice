<h1>Edit Book</h1>

<%= form_with model: @book, url: book_path(@book), method: :patch do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :author %>
    <%= form.text_field :author %>
  </div>

  <div>
    <%= form.label :genre %>
    <%= form.text_field :genre %>
  </div>

  <%= form.submit "Update Book" %>
<% end %>

<%= link_to "Back to Books", books_path %>